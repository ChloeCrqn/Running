<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="running.org.running" >

    <application android:name="running.org.running.RunningApp" android:allowBackup="true" android:icon="@mipmap/ic_launcher" android:label="@string/app_name" android:theme="@style/AppTheme" >
        <activity
            android:name=".Metronome"
            android:label="@string/app_name" android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MetronomeSettingsActivity"
            android:label="@string/app_name"
            android:parentActivityName=".Metronome">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Metronome" />
        </activity>
        <activity
            android:name=".RunningActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name" >
        </activity>
    </application>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
</manifest>
